<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (products.length > 0) { %>
            <ul class="cart__item-list">
                <% let totalPrice = 0; %> 
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <h1><%= p.title %></h1>
                        <h1><img src="<%= p.imageUrl %>" alt="<%= p.title %>"></h1>
                        <p><%= p.description %></p>
                        <h2>Quantity: <%= p.cartItem.quantity %></h2>
                        <h2>Price per item: $<%= p.price %></h2>
                        <h2>Total for this product: $<%= p.price * p.cartItem.quantity %></h2> 

                        <% totalPrice += p.price * p.cartItem.quantity; %> 
                        
                        <form action="/cart-delete-item" method="POST">
                            <input type="hidden" value="<%= p.id %>" name="productId">
                            <button class="btn danger" type="submit">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
            <h2>Total Cart Price: $<%= totalPrice %></h2>
        <% } else { %>
            <h1>No Products in Cart!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
